{
    "ConnectionStrings": {
        "DefaultConnection": "Server=db;Database=MyCookbookDb;User Id=sa;Password=pwd;TrustServerCertificate=True"
    },
    "DetailedErrors": true,
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console" ],
        "MinimumLevel": "Warning",
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "GrafanaLoki",
                "Args": {
                    "uri": "https://logs-prod-012.grafana.net",
                    "labels": [
                        {
                            "key": "app",
                            "value": "MyCookbookDEV"
                        }
                    ],
                    "propertiesAsLabels": [
                        "app"
                    ]
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Destructure": [
            {
                "Name": "ToMaximumDepth",
                "Args": { "maximumDestructuringDepth": 4 }
            },
            {
                "Name": "ToMaximumStringLength",
                "Args": { "maximumStringLength": 100 }
            },
            {
                "Name": "ToMaximumCollectionCount",
                "Args": { "maximumCollectionCount": 10 }
            }
        ],
        "Properties": {
            "Application": "MyCookbookDEV"
        }
    }
}
