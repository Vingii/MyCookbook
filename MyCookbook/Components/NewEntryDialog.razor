@using Microsoft.Extensions.Localization;
@using MyCookbook.Services;
@inject IStringLocalizer<NewEntryDialog> Localizer
@inject LanguageNotifier LanguageNotifier
@implements IDisposable

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            @Localizer["AddNew"] @EntryType
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudFocusTrap>
            <MudTextField @ref="TextField" @bind-Value="Name" Label="@Localizer["Name"]" Variant="Variant.Text" Immediate="true" OnKeyDown="OnKeyDown"></MudTextField>
        </MudFocusTrap>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; }
    [Parameter] public string EntryType { get; set; }

    private string Name { get; set; }

    private MudTextField<string> TextField { get; set; }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(Name));
    }

    private void Cancel() => MudDialog.Cancel();

    protected override void OnInitialized() => LanguageNotifier.SubscribeLanguageChange(this);
    public void Dispose() => LanguageNotifier.UnsubscribeLanguageChange(this);

    private void OnKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !e.ShiftKey)
        {
            Submit();
        }
    }
}