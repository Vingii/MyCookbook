@using Microsoft.Extensions.Localization;
@using MyCookbook.Services;
@inject IStringLocalizer<ConfirmationDialog> Localizer
@inject LanguageNotifier LanguageNotifier
@implements IDisposable

<MudDialog>
    <DialogContent>
        <MudText>@(Localizer["AreYouSure"]) @(Action)?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; }
    [Parameter] public string Action { get; set; }

    private string Name { get; set; }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(Name));
    }

    private void Cancel() => MudDialog.Cancel();

    protected override void OnInitialized() => LanguageNotifier.SubscribeLanguageChange(this);
    public void Dispose() => LanguageNotifier.UnsubscribeLanguageChange(this);
}