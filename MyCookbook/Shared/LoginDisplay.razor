<AuthorizeView>
    <Authorized>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Href="Identity/Account/Manage">@context.User.Identity?.Name!</MudButton>
        &nbsp;
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Href="Identity/Account/LogOut">Log out</MudButton>
    </Authorized>
    <NotAuthorized>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Href="Identity/Account/Login">Login</MudButton>
        &nbsp;
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Href="Identity/Account/Register">Register</MudButton>
    </NotAuthorized>
</AuthorizeView>
