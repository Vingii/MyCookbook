@inject IJSRuntime JSRuntime
@inherits LayoutComponentBase

<PageTitle>MyCookbook</PageTitle>

<MudThemeProvider @bind-IsDarkMode="@IsDarkMode" @ref="@_mudThemeProvider" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        My Cookbook
        <MudSpacer />
        <MudToolBar>
            <MudToggleIconButton Size="@Size.Medium" @bind-Toggled="@_isDarkMode"
                                 Icon="@Icons.Material.Filled.DarkMode" Title="Off"
                                 ToggledIcon="@Icons.Material.Filled.LightMode" ToggledTitle="On" />
            <MyCookbook.Components.LanguageSelector />
            <MyCookbook.Components.Feedback />
            <LoginDisplay />
        </MudToolBar>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme _theme = new();
    private MudThemeProvider? _mudThemeProvider;
    private bool _isDarkMode = true;
    private bool IsDarkMode
    { 
        get => _isDarkMode;
        set
        {
            _isDarkMode = value;
            DarkModeModule?.Value?.InvokeVoidAsync("addCookies", "DarkMode", value);
        } 
    }

    bool _drawerOpen = true;

    private Lazy<IJSObjectReference> DarkModeModule;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        DarkModeModule = new(await JSRuntime.InvokeAsync<IJSObjectReference>("import", "./js/DarkMode.js"));

        var myCookie = await JSRuntime.InvokeAsync<string>("ReadCookie.ReadCookie", "DarkMode");

        IsDarkMode = myCookie != null && bool.TryParse(myCookie, out var darkMode) ? darkMode : await _mudThemeProvider.GetSystemPreference();
        StateHasChanged();
    }

    public async ValueTask DisposeAsync()
    {
        if (DarkModeModule.IsValueCreated)
        {
            await DarkModeModule.Value.DisposeAsync();
        }
    }
}