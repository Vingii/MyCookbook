{
    "ConnectionStrings": {
        "DefaultConnection": "Server=tcp:mycookbookpdn.database.windows.net,1433;Initial Catalog=MyCookbookPdnDb;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;Authentication=\"Active Directory Default\";"
    },
    "DetailedErrors": true,
    "Serilog": {
        "MinimumLevel": "Warning",
        "WriteTo": [
            {
                "Name": "GrafanaLoki",
                "Args": {
                    "uri": "https://logs-prod-012.grafana.net",
                    "labels": [
                        {
                            "key": "app",
                            "value": "MyCookbookPDN"
                        }
                    ],
                    "propertiesAsLabels": [
                        "app"
                    ]
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Destructure": [
            {
                "Name": "ToMaximumDepth",
                "Args": { "maximumDestructuringDepth": 4 }
            },
            {
                "Name": "ToMaximumStringLength",
                "Args": { "maximumStringLength": 100 }
            },
            {
                "Name": "ToMaximumCollectionCount",
                "Args": { "maximumCollectionCount": 10 }
            }
        ],
        "Properties": {
            "Application": "MyCookbookPDN"
        }
    }
}